#include <stdio.h>
#include <stdlib.h>
void task1()
{

   int x;
   printf("please enter a number from 1 to 10");
   printf("\t");
   scanf("%i",&x);
   printf("\n");
   if(x==1)
   {
       printf("Machine is ON ");

   }
  else if (x==2)
   {
       printf("Machine is OFF");

   }
 else  if(x==3)
   {
       printf("Machine is Working");

   }
   else if(x==4)
   {
       printf("Robot Is Moving");

   }
   else if(x==5)
   {
       printf("Robot stopped");

   }
   else if(x==6)
   {
       printf("Connection Error");

   }
   else if(x==8)
   {
       printf("Connection Returned");

   }
   else if(x==9)
   {
       printf("Power Low");

   }
   else if(x==10)
   {
       printf("Power Charging");

   }
    else
   {
       printf("\a Error");

   }
       printf("\n");
       scanf("%i",&x);
}

void task2()
{
    int x,y;
   printf("please enter first number \t");
   scanf("%i",&x);
   printf("please enter second number \t");
   scanf("%i",&y);
   for(  int  i=1 ; i<=x ;i++)
   {
       if(i%y==0)
       {
           i=i+1;
       }
       printf("%i \t \a",i);
   }
   return 0;
}

void task3()
{
    int x,y,z;
printf("please enter the number \t");
scanf("%i",&x);
printf("please enter the power \t");
scanf("%i",&z);
y=1;
for(int i=1;i<=z;i++)
{
    y=y*x;
    printf("\t %i",y);
}
}

void task4()
{
     int x,i;
 printf("enter the number \t");
 scanf("%i",&x);
 for(int i=1;i<=(x/2);i++)

 {

  printf("%i \t",i);

 }
 printf("%i \t",x);
for(int i=((x/2)+1);i<x;i++)
{

    printf("%i \t",i);
}
printf("%i \t \a",(x*2));

}
int main()
{
   int x;
   printf("please enter a number 1,2,3,4 \t");
   scanf("%i",&x);
   if (x==1)
   {
       task1();
   }
   if (x==2)
   {
       task2();
   }
   if(x==3)
   {
       task3();
   }
   if(x==4)
   {
       task4();
   }

}
