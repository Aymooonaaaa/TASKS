void func3(void){

int temp;
int *ptr;
int  a[10]={1,2,3,4,5,6,7,8,9,67};
ptr=a;
for(int i=0;i<9;i++){
    for(int j=0;j<10-i;j++){
       if(*ptr>*(ptr+1)){
        temp=*ptr;
        *ptr=*(ptr+1);
        *(ptr+1)=temp;
    }
     ptr++;
    }
   ptr=a;
}
printf("\n");
for(int i=0;i<10;i++){
    printf("%i \t",a[i]);
}

}

